<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5"
    tools:context=".QuizActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Quiz Title -->
        <TextView
            android:id="@+id/quizTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Quiz de Personalidade"
            android:textColor="#1976D2"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- User Name Display -->
        <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="#666666"
            android:textSize="16sp"
            tools:text="Olá, Arthur!" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="24dp"
            android:max="6"
            android:progress="1"
            android:progressTint="#FF9800" />

        <!-- Progress Text -->
        <TextView
            android:id="@+id/progressTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="#666666"
            android:textSize="14sp"
            tools:text="Pergunta 1 de 6" />

        <!-- Question Text -->
        <TextView
            android:id="@+id/questionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:background="#FFFFFF"
            tools:text="Qual é o seu maior medo?" />

        <!-- RadioGroup for options -->
        <RadioGroup
            android:id="@+id/answersRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="8dp">

            <RadioButton
                android:id="@+id/option1RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="16sp"
                tools:text="Opção 1" />

            <RadioButton
                android:id="@+id/option2RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="16sp"
                tools:text="Opção 2" />

            <RadioButton
                android:id="@+id/option3RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="16sp"
                tools:text="Opção 3" />

            <RadioButton
                android:id="@+id/option4RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="16sp"
                tools:text="Opção 4" />

            <RadioButton
                android:id="@+id/option5RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="16sp"
                android:visibility="gone"
                tools:text="Opção 5" />

            <RadioButton
                android:id="@+id/option6RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="16sp"
                android:visibility="gone"
                tools:text="Opção 6" />

            <RadioButton
                android:id="@+id/option7RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="16sp"
                android:visibility="gone"
                tools:text="Opção 7" />
        </RadioGroup>

        <!-- Next/Result Button -->
        <Button
            android:id="@+id/nextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Próxima"
            android:textSize="16sp"
            android:padding="16dp" />

    </LinearLayout>
</ScrollView>
