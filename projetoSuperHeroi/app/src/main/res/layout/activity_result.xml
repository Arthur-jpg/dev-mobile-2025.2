<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5"
    tools:context=".ResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Result Title -->
        <TextView
            android:id="@+id/resultTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="Seu Herói é..."
            android:textColor="#1976D2"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Hero Image -->
        <ImageView
            android:id="@+id/heroImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="24dp"
            android:contentDescription="Imagem do herói"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_launcher_foreground" />

        <!-- Hero Name -->
        <TextView
            android:id="@+id/heroNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textColor="#FF9800"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:text="Homem de Ferro" />

        <!-- Hero Description -->
        <TextView
            android:id="@+id/heroDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:textColor="#333333"
            android:textSize="16sp"
            android:padding="16dp"
            android:background="#FFFFFF"
            tools:text="Você é inovador e inteligente" />

        <!-- Share Button -->
        <Button
            android:id="@+id/shareButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Compartilhar Resultado"
            android:textSize="16sp"
            android:padding="16dp" />

        <!-- GitHub Button -->
        <Button
            android:id="@+id/githubButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Ver no GitHub"
            android:textSize="16sp"
            android:padding="16dp" />

        <!-- Restart Button -->
        <Button
            android:id="@+id/restartButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Reiniciar Quiz"
            android:textSize="16sp"
            android:padding="16dp" />

    </LinearLayout>
</ScrollView>
