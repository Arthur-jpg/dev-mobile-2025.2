<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SuperHeroi">
        
        <!-- Main Activity - Tela Inicial -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Quiz Activity - Tela das Perguntas -->
        <activity
            android:name=".QuizActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        
        <!-- Result Activity - Tela de Resultado -->
        <activity
            android:name=".ResultActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        
        <!-- Tiebreaker Activity - Tela de Desempate -->
        <activity
            android:name=".TiebreakerActivity"
            android:exported="false"
            android:parentActivityName=".QuizActivity" />
    </application>

</manifest>