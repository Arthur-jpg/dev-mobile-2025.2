<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background"
    tools:context=".ResultActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Result Title -->
        <TextView
            android:id="@+id/resultTitleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="@string/result_title"
            android:textColor="@color/primary"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Result Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/resultCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/resultTitleTextView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <!-- Hero Image -->
                <ImageView
                    android:id="@+id/heroImageView"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:contentDescription="@string/result_title"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/ic_launcher_foreground" />

                <!-- Hero Name -->
                <TextView
                    android:id="@+id/heroNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:textColor="@color/accent"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    tools:text="@string/hero_ironman" />

                <!-- Hero Description -->
                <TextView
                    android:id="@+id/heroDescriptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    tools:text="@string/hero_ironman_desc" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Share Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/shareButton"
            style="@style/QuizButton"
            android:layout_marginTop="24dp"
            android:text="@string/share_result"
            android:textAllCaps="false"
            app:icon="@android:drawable/ic_menu_share"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/resultCard" />

        <!-- GitHub Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/githubButton"
            style="@style/QuizButtonOutlined"
            android:layout_marginTop="12dp"
            android:text="@string/view_github"
            android:textAllCaps="false"
            app:icon="@android:drawable/ic_menu_info_details"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shareButton" />

        <!-- Restart Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/restartButton"
            style="@style/QuizButtonOutlined"
            android:layout_marginTop="12dp"
            android:text="@string/restart_quiz"
            android:textAllCaps="false"
            app:icon="@android:drawable/ic_menu_rotate"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/githubButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
